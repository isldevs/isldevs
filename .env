# Required
DB_URL=jdbc:postgresql://localhost:5432/db
DB_USERNAME=user
DB_PASSWORD=pass
DB_DRIVER_CLASS=org.postgresql.Driver

# Optional (with smart defaults)
DB_POOL_MAX_SIZE=25# Overrides auto-calculation in code
DB_POOL_MIN_IDLE=10# 50% of max pool size
DB_CONNECTION_TIMEOUT=5000# 5s for production
DB_IDLE_TIMEOUT=120000# 2m for production
DB_MAX_LIFETIME=1800000# 30m
DB_LEAK_DETECTION_THRESHOLD=60000# 60s